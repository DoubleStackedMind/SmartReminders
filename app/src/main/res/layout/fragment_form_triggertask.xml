<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Test.addPlan"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <EditText
    android:id="@+id/Title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Title"
    android:textColor="@color/colorGray"
    android:textAlignment="center"
    android:textColorHint="@color/colorGray"/>
    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Desscription"
        android:textColor="@color/colorGray"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/colorGray"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Days: "
        android:textSize="20dp"
        android:textColor="@color/colorGray"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="70"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp">

        <Button
            android:id="@+id/pushb_sunday"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:background="@drawable/roundbutton"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="Sun" />

        <Button
            android:id="@+id/pushb_monday"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:background="@drawable/roundbutton"
            android:textColor="@color/white"
            android:text="Mon" />

        <Button
            android:id="@+id/pushb_tuesday"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:background="@drawable/roundbutton"
            android:textColor="@color/white"
            android:text="Tue" />

        <Button
            android:id="@+id/pushb_wednesday"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:background="@drawable/roundbutton"
            android:textColor="@color/white"
            android:text="Wed" />

        <Button
            android:id="@+id/pushb_thursday"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:background="@drawable/roundbutton"
            android:textColor="@color/white"
            android:text="Thu" />

        <Button
            android:id="@+id/pushb_friday"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:background="@drawable/roundbutton"
            android:textColor="@color/white"
            android:text="FRI" />

        <Button
            android:id="@+id/pushb_saturday"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:background="@drawable/roundbutton"
            android:textColor="@color/white"
            android:text="Sat" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinnerType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/plan_type"
        android:prompt="@string/plan_prompt"
        android:layout_marginTop="30dp"/>

    <FrameLayout
        android:id="@+id/fragmentPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        />

    <Button
        android:id="@+id/AddPlan"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Add Plan"
        android:background="@drawable/roun_rect_green"
        android:textColor="@color/white"
        />

</LinearLayout>